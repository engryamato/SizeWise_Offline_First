{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@main/*": ["app/main/*"],
      "@renderer/*": ["app/renderer/*"],
      "@workers/*": ["app/workers/*"]
    }
  },
  "include": ["app", "tests", "docs/specs/**/*.md"],
  "exclude": ["node_modules", "dist"]
}

